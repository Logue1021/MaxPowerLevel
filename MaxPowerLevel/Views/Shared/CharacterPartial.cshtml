@model CharacterViewModel
@using Humanizer
@using System.Linq

@{
  var lowestItems = Model.LowestItems;
  var recommendations = Model.Recommendations;
}

@if(Model.Recommendations.Any())
{
  <h1>Recommendations</h1>
  <ol>
    @foreach(var recommendation in recommendations)
    {
      <li>@recommendation</li>
      @if(recommendation.Activities.Any())
      {
        <ol>
          @foreach(var activity in recommendation.Activities)
          {
            <li>@activity</li>
          }
        </ol>
      }
    }
  </ol>
}

<h1>Item Power Levels</h1>
<ul>
    @foreach(var engram in Model.Engrams)
    {
        <li>@engram.Description</li>
    }
</ul>

<div class="container">
  @if(lowestItems.Any())
  {
    <div class="row">
      <h1>@("Lowest Item".ToQuantity(lowestItems.Count(), ShowQuantityAs.None))</h1>
    </div>
    <div class="row">
      @foreach(var item in lowestItems)
      {
        <div class="col-auto">
          @await Html.PartialAsync("ItemPartial", item)
        </div>
      }
    </div>
  }

  <div class="row">
    <h1>Highest Power Items</h1>
  </div>
  <div class="row">
    @foreach(var item in Model.Items)
    {
      <div class=@("col-md-" + (12 / Model.ItemsPerRow))>
        @await Html.PartialAsync("ItemPartial", item)
      </div>
    }
  </div>
</div>
